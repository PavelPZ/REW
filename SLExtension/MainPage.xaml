<UserControl x:Class="SLExtension.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480" >
  <Grid>
    <Button Name="alowBtn" Click="alowBtn_Click" Width="200" Height="40" Content="?????????" FontSize="14" FontWeight="Bold" Foreground="White" Canvas.ZIndex="10" Visibility="Collapsed" >
      <Button.Template>
        <ControlTemplate TargetType="Button">
          <Grid >
            <Border Background="#FFD9534F" CornerRadius="5"></Border>
            <ContentPresenter Content="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center" />
          </Grid>
        </ControlTemplate>
      </Button.Template>
    </Button>
    <MediaElement IsMuted="False" AutoPlay="False" Name="Player" Margin="0" />
  </Grid>
</UserControl>
